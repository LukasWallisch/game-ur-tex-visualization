


\NewDocumentCommand{\fsetmacros}{mmm}{
    \pgfmathsetmacro\prepareS{0}
    \pgfmathsetmacro\prepareE{#1-1}
    \pgfmathsetmacro\fightS{#1}
    \pgfmathsetmacro\fightE{{#1+#2-1}}
    \pgfmathsetmacro\aftermathS{{#1+#2}}
    \pgfmathsetmacro\aftermathE{{#1+#2+#3-1}}

    \pgfmathsetmacro\trow{-1}
    \pgfmathsetmacro\mrow{1}
    \pgfmathsetmacro\brow{1}
}

\NewDocumentCommand{\fgameur}{mmm}{
    \fsetmacros{#1}{#2}{#3}
    \gameur{\prepareS}{\prepareE}{\fightS}{\fightE}{\aftermathS}{\aftermathE}[\trow][\mrow][\brow]
}
